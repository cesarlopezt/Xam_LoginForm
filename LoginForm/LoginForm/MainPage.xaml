<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginForm.MainPage">

    <StackLayout Padding="50">
        <Label Text="Login" FontSize="Title" FontAttributes="Bold"  HorizontalOptions="Center" Padding="0,60,0,0"/>

        <Label Text="Username" FontSize="16"/>
        <Entry x:Name="username" TextColor="White" Placeholder="Insert your username here..."  />
        <Label Text="Password" FontSize="16"/>
        <Entry x:Name="password" TextColor="White" Placeholder="Insert your password here..." IsPassword="True" />
        <Button Text="Login" BackgroundColor="#861657" BorderColor="White" BorderWidth="0.1" CornerRadius="10" Margin="0,30,0,0" Clicked="OnLoginClicked"  />
    </StackLayout>

</ContentPage>
